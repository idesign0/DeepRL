<mujoco model="robot scene">
  <include file="robot.xml"/>

  <statistic center="0 0 0.8" extent="2"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="1 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="1 -1 1.5" dir="-1 1 -1" diffuse="0.5 0.5 0.5" directional="true"/>
    <geom name="floor" size="10 10 0.05" type="plane" material="groundplane"/>

  <body name="cube" pos="0.2 -0.5 0.02">
    <joint name="cube_joint" type="free"/> 
    <geom type="box" size="0.02 0.02 0.02" rgba="1 0.5 0 1" mass="0.1" friction="1 0.005 0.0001"/>
    <site name="cube_site" pos="0 0 0" size="0.01"/>
  </body>

    <body name="target" pos="0.4 0.4 0.03" mocap="true">
      <geom type="sphere" size="0.03" rgba="0 1 0 0.3" contype="0" conaffinity="0"/>
      <site name="target_site" pos="0 0 0" size="0.01"/>
    </body>
  </worldbody>
</mujoco>